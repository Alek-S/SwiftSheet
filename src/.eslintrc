{
	"ecmaFeatures": {
		"jsx": true,
		"modules": true
	},
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
    	"node": true
	},
	"parser": "babel-eslint",
	"rules": {
		"quotes": [2, "single"],
		"no-console": 0,
		"strict": [2, "never"],
		"react/jsx-uses-react": 2,
		"react/jsx-uses-vars": 2,
		"react/react-in-jsx-scope": 2,
		"semi": [
			"error",
			"always"
        ],
		"no-var": "warn",
		 "indent": [
            "error",
            "tab", {
                "SwitchCase": 1
            }
        ]
    },
	"plugins": [
		"react"
	]
}